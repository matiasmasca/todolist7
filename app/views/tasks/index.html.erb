<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Tasks" %>

  <%= form_with(model: @task, class: "contents") do |form| %>
  <div class="text-gray-700">
    <div class="flex items-center py-2">
      <%= form.label :name, "New Task" %>
      <%= form.text_field :name, class: "" %>
    </div>

    <div class="inline">
      <%= form.button :submit, class: "px-4 py-2 font-semibold text-sm bg-blue-500 text-white rounded-md shadow-sm hover:scale-125 ease-in-out duration-300 delay-150"  %>
    </div>
  </div>
  <% end %>

  <%= turbo_stream_from 'tasks' %>

  <h1>TO DO LIST</h1>
  <%= turbo_frame_tag "todo_list" do %>
    <%= render @tasks %>
  <% end %>

  <h1>DONE TASK</h1>
  <%= turbo_frame_tag "done_list" do %>
    <%= render @done_tasks %>
  <% end %>
</div>
